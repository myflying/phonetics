page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scroll-view {
  margin-top: 10rpx;
}

.video-top {
  text-align: center;
  width: 100%;
  height: 400rpx;
}

.video-play {
  width: 96%;
  height: 400rpx;
  margin-top: 2%;
}

.buy-view {
  width: 96%;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
}

.buy-info {
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
}

.buy-user-head {
  width: 30rpx;
  height: 30rpx;
}

.buy-count {
  color: #f55;
  font-size: 10pt;
  margin-left: 10rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.buy-txt {
  color: #aaa;
  font-size: 10pt;
  height: 30rpx;
  line-height: 30rpx;
}

.line-view {
  width: 100%;
  height: 2rpx;
  background: #f2f2f2;
}

.weike-title-info {
  font-size: 35rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.weike-title {
  color: #333;
  font-weight: 600;
}

.price-view {
  margin-top: 10rpx;
}

.now-price {
  color: #ff5555;
  font-size: 28rpx;
}

.old-price {
  color: #aaa;
  font-size: 28rpx;
  text-decoration:line-through;
  margin-left: 30rpx;
}

.content-title-view {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #e6f2f9;
  font-size: 30rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
  color: #333;
}

.content-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content-txt{
  width: 90%;
  height: 100%;
  color: #aaa;
  font-size: 24rpx;
  margin-top: 30rpx;
  line-height: 110%;
}

.pay-view {
  width: 100%;
  height: 80rpx;
  background: #ff5555;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}