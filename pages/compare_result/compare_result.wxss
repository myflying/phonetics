page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.top-view {
  width: 690rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.top-img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 48rpx;
}

.top-txt {
  font-size: 14pt;
  color: #30c065;
  margin-right: 48rpx;
  font-weight: 600;
}

.vowel-warpper {
  width: 690rpx;
  height: 560rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 130rpx;
}

.vowel-name {
  width: 252rpx;
  height: 68rpx;
  background-color: #eee;
  text-align: center;
  border-radius: 12px;
  font-size: 12pt;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.read-vowel {
  width: 400rpx;
  height: 80rpx;
  font-size: 12pt;
  display: flex;
  justify-content: center;
  align-items: center;
}

.read-play-img {
  width: 58rpx;
  height: 58rpx;
  margin-top: 20rpx;
}

.correct-img {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 30rpx;
}

.next-view {
  width: 690rpx;
  margin-top: 130rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fbfffc;
  border-radius: 30rpx;
}

.pre-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.next-group-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  color: #30c065;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.pre-btn:after {
  border: 0;
}

.next-group-btn:after {
  border: 0;
}
