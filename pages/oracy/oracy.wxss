page {
  width: 100%;
  height: 100%;
  background-color: #fff;
  overflow-y: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.vowel-warpper {
  width: 750rpx;
  height: 90%;
  flex-direction: column;
  align-items: center;
}

.letter-view {
  width: 570rpx;
  height: 180rpx;
  background-color: #feeded;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.letter-view-text {
  font-size: 11pt;
  width: 500rpx;
  letter-spacing: 4rpx;
}

.letter-bg {
  width: 569rpx;
  height: 381rpx;
}

.next-view {
  width: 690rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fbfffc;
  border-radius: 30rpx;
}

.pre-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.next-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.pre-btn:after {
  border: 0;
}

.next-btn:after {
  border: 0;
}

.tab {
  float: left;
  height: 80rpx;
  width: 200rpx;
  text-align: center;
  color: #000;
  font-size: 12pt;
  line-height: 80rpx;
}

.line {
  height: 90rpx;
  width: 2rpx;
  background: #f8f8f8;
}

.tabwarpper {
  width: 100%;
  height: 120rpx;
  background: #f8f8f8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.topTabSwiper {
  width: 490rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 20px;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  color: #30c065;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
}

.swiper {
  width: 750rpx;
  height: 100%;
  background: #fff;
}

.swiper_con {
  text-align: center;
  width: 750rpx;
  height: 100%;
}

.type-top-view {
  width: 710rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.type-top-left {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.type-video-img {
  width: 42rpx;
  height: 42rpx;
}

.type-video-txt {
  font-size: 14pt;
  color: #000;
  margin-left: 20rpx;
}

.type-top-right {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.type-more-img {
  width: 40rpx;
  height: 40rpx;
}

.type-more-txt {
  font-size: 14pt;
  color: #aaa;
}

.type-banner {
  width: 750rpx;
}

.banner-positon {
  width: 100%;
  height: 314rpx;
  position: relative;
}

.type_banner-img {
  width: 738rpx;
  height: 314rpx;
}

.banner-play-info {
  position: absolute;
  z-index: 100;
  left: 30rpx;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.play-count-img {
  width: 35rpx;
  height: 35rpx;
}

.play-count-txt {
  color: #fff;
  font-size: 11pt;
  margin-left: 20rpx;
}

.banner-data-info {
  position: absolute;
  z-index: 100;
  right: 30rpx;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.banner-data-txt {
  color: #fff;
  font-size: 11pt;
}

.listen-positon {
  width: 100%;
  height: 242rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.listen-info {
  position: absolute;
  z-index: 100;
  left: 20rpx;
  bottom: 14rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.listen-img {
  width: 362rpx;
  height: 241rpx;
  border-radius: 8px;
}

.listen-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12pt;
}

.type-banner-txt {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.type-banner-name {
  font-size: 14pt;
  color: #000;
  margin-left: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.listen-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.listen-item {
  width: 50%;
  height: auto;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  position: relative;
}
