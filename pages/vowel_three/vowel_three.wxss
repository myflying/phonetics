page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
}

.top-view {
  width: 690rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.top-img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 48rpx;
}

.top-txt {
  font-size: 14pt;
  color: #30c065;
  font-weight: 600;
}

.top-total-txt {
  font-size: 14pt;
  color: #000;
  margin-right: 48rpx;
  font-weight: 600;
}

.progress {
  width: 400rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 10px;
  position: relative;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #eeeeee;
}

.progress-index {
  position: absolute;
  left: 0;
  width: 135rpx;
  height: 30rpx;
  background: #30c065;
  border-radius: 10px;
}


.count-progress {
  width: 240rpx;
  height: 30rpx;
  background: #d94b48;
  border-radius: 10px;
  position: relative;
  margin-left: 40rpx;
  box-shadow: 1rpx 1rpx #fa7f80;
}

.count-progress-index {
  position: absolute;
  left: 0;
  height: 30rpx;
  background: #fa7f80;
  border-radius: 10px;
}

.vowel-warpper {
  width: 690rpx;
  height: 758rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 30rpx;
  position: relative;
}

.vowel-name {
  width: 252rpx;
  height: 68rpx;
  background-color: #eee;
  text-align: center;
  border-radius: 12px;
  font-size: 28rpx;
  padding: 10rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vowel-progress {
  width: 570rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}

.vowel-letter {
  width: 570rpx;
  height: 314rpx;
}

.vowel-img {
  width: 570rpx;
  height: 314rpx;
  border-radius: 10px;
}

.letter-play{
  width: 570rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  position: absolute;
  bottom: 0;
  left: 60rpx;
}

.play-img {
  width: 102rpx;
  height: 102rpx;
}

.next-view {
  width: 690rpx;
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fbfffc;
  border-radius: 30rpx;
}

.pre-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.next-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.pre-btn:after {
  border: 0;
}

.next-btn:after {
  border: 0;
}

.tab {
  float: left;
  width: 50%;
  text-align: center;
  padding: 10rpx 0;
  color: #777;
  font-size: 12pt;
  border-bottom: 2px solid #cdcdcd;
}

.topTabSwiper {
  width: 100%;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  color: #000;
  border-bottom: 2px solid #30c065;
}

.swiper {
  width: 100%;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
}
