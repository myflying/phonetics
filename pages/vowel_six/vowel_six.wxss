page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.top-view {
  width: 690rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.top-img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 48rpx;
}


.top-txt {
  font-size: 14pt;
  color: #30c065;
  font-weight: 600;
}

.top-total-txt {
  font-size: 14pt;
  color: #000;
  margin-right: 48rpx;
  font-weight: 600;
}

.progress {
  width: 400rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 10px;
  position: relative;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #eeeeee;
}

.progress-index {
  position: absolute;
  left: 0;
  width: 270rpx;
  height: 30rpx;
  background: #30c065;
  border-radius: 10px;
}

.vowel-warpper {
  width: 690rpx;
  height: 760rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 30rpx;
}

.vowel-name {
  width: 252rpx;
  height: 68rpx;
  background-color: #eee;
  text-align: center;
  border-radius: 12px;
  font-size: 12pt;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vowel-letter {
  width: 570rpx;
}

.group-vowel {
  margin-left: 24rpx;
  font-size: 16pt;
}

.group-item  {
  width: 566rpx;
  height: 120rpx;
  background: #fff;
  border: 1px solid #dddddd;
  border-radius: 16px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  margin-top: 20rpx;
}

.vowel-checked {
  border: 1px solid #30c065;
  border-radius: 16px;
}

.vowel-top {
  min-height: 50rpx;
  margin-left: 36rpx;
  font-size: 32rpx;
}

.vowel-bottom {
  min-height: 50rpx;
  margin-left: 36rpx;
  font-size: 26rpx;
}

.next-view {
  width: 690rpx;
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fbfffc;
  border-radius: 30rpx;
}

.pre-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.next-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.pre-btn:after {
  border: 0;
}

.next-btn:after {
  border: 0;
}

.play-result {
  width: 570rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.play-warpper {
  width: 450rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.score {
  font-size: 14pt;
  color: #ff6666;
}

.score-txt {
  font-size: 14pt;
  color: #ff6666;
  margin-left: 6rpx;
}

.audio-play {
  width: 102rpx;
  height: 102rpx;
}

.tape {
  width: 112rpx;
  height: 112rpx;
}

.play-tape {
  width: 102rpx;
  height: 102rpx;
}

.tape-result {
  width: 360rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  font-size: 6pt;
}

.result-txt {
  font-size: 12pt;
  color: #333;
  height: 70rpx;
}

.test-txt {
  font-size: 12pt;
  color: #aaa;
  height: 70rpx;
}

.tape-result-img {
  width: 40rpx;
  height: 40rpx;
}
