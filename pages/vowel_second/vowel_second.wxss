page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
}

.top-view {
  width: 690rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.top-img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 48rpx;
}

.top-txt {
  font-size: 14pt;
  color: #30c065;
  font-weight: 600;
}

.top-total-txt {
  font-size: 14pt;
  color: #000;
  margin-right: 48rpx;
  font-weight: 600;
}

.progress {
  width: 400rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 10px;
  position: relative;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #eeeeee;
}

.progress-index {
  position: absolute;
  left: 0;
  width: 90rpx;
  height: 30rpx;
  background: #30c065;
  border-radius: 10px;
}

.vowel-warpper {
  width: 690rpx;
  height: 760rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 30rpx;
}

.vowel-name {
  width: 252rpx;
  height: 68rpx;
  background-color: #eee;
  text-align: center;
  border-radius: 12px;
  font-size: 12pt;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-play {
  width: 570rpx;
  height: 320rpx;
}

.mouth-img {
  width: 570rpx;
  height: 320rpx;
}

.vowel-letter {
  width: 570rpx;
  height: 400rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 20rpx;
}

.letter-view {
  width: 570rpx;
  height: 160rpx;
  background-color: #feeded;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.letter-view-text {
  font-size: 26rpx;
  width: 500rpx;
  height: 156rpx;
  letter-spacing: 4rpx;
  position: relative;
}

.horn-img {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 12rpx;
  left: 10rpx;
}

.letter-remark {
  position: absolute;
  top: 16rpx;
  left: 10rpx;
}

.letter-bg {
  width: 569rpx;
  height: 381rpx;
}

.next-view {
  width: 690rpx;
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fbfffc;
  border-radius: 30rpx;
}

.pre-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.next-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.pre-btn:after {
  border: 0;
}

.next-btn:after {
  border: 0;
}

.tab {
  float: left;
  width: 50%;
  text-align: center;
  padding: 10rpx 0;
  color: #777;
  font-size: 12pt;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tab_line {
  width: 100rpx;
  height: 8rpx;
  background: #30c065;
  margin-top: 16rpx;
  border-radius: 4rpx;
}

.topTabSwiper {
  width: 100%;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  color: #30c065;
}

.swiper {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 320rpx;
}
