page {
  width:  100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
}

.top-view {
  width: 690rpx;
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.top-img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 48rpx;
}

.top-txt {
  font-size: 14pt;
  color: #30c065;
  margin-right: 48rpx;
  font-weight: 600;
}

.vowel-warpper {
  width: 690rpx;
  height: 758rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 30rpx;
}

.vowel-name {
  width: 252rpx;
  height: 68rpx;
  background-color: #eeeeee;
  text-align: center;
  border-radius: 12px;
  font-size: 12pt;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vowel-letter {
  width: 570rpx;
  height: 182rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 20rpx;
}

.letter-left {
  width: 460rpx;
}

.left-top {
  font-size: 16pt;
}

.left-top-t2 {
  font-size: 14pt;
}

.left-bottom {
  margin-top: 18rpx;
}

.letter-right {
  width:110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.right-play-img{
  width: 102rpx;
  height: 102rpx;
}

.letter-view {
  margin-top: 40rpx;
}

.letter-bg {
  width: 569rpx;
  height: 381rpx;
}

.next-btn:after{
  border: 0;
}

.phonetic-remark {
  font-size: 11pt;
  color: #000;
  letter-spacing: 2rpx;
}

.next-view {
  width: 690rpx;
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fbfffc;
  border-radius: 30rpx;
}

.pre-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.next-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.pre-btn:after {
  border: 0;
}

.next-btn:after {
  border: 0;
}
