page {
  width:  100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.top-view {
  width: 690rpx;
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.top-img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 48rpx;
}

.top-txt {
  font-size: 14pt;
  color: #30c065;
  margin-right: 48rpx;
  font-weight: 600;
}

.vowel-warpper {
  width: 690rpx;
  height: 766rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 30rpx;
}

.vowel-name {
  width: 252rpx;
  height: 68rpx;
  background-color: #eeeeee;
  text-align: center;
  border-radius: 12px;
  font-size: 12pt;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vowel-letter {
  width: 570rpx;
  height: 600rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 20rpx;
}

.phonetic-remark {
  font-size: 11pt;
  color: #000;
  letter-spacing: 2rpx;
}

.next-view {
  width: 690rpx;
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fbfffc;
  border-radius: 30rpx;
}

.pre-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
}

.again-btn {
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 14pt;
  text-align: center;
  background: #fbfffc;
  border: 1px solid #fbfffc;
  border-radius: 30rpx;
  color: #30c065;
}

.pre-btn:after {
  border: 0;
}

.again-btn:after {
  border: 0;
}

.consonant-title {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

.vowel-bottom {
  width: 570rpx;
  height: 180rpx;
  background: #feeded;
  border-radius: 10px;
  margin-top: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.vowel-single {
  width: 570rpx;
  height: 100rpx;
  background: #feeded;
  border-radius: 10px;
  margin-top: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.vowel-item {
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  margin-left: 40rpx;
  font-size: 11pt;
}

.title-view{
  height: 60rpx;
  line-height: 60rpx;
}