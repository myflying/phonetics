page {
  width: 100%;
  height: 100%;
}

/** 弹窗**/

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
  background-size: 100% 100%;
}

.modal-dialog {
  position: fixed;
  width: 652rpx;
  height: 850rpx;
  left: 49rpx;
  top: 50rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  z-index: 9999;
  display: flex;
  background: #fff;
  border-radius: 12px;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  font-size: 34rpx;
  line-height: 86rpx;
  margin-top: 40rpx;
  position: absolute;
  bottom: 50rpx;
  left: 140rpx;
}

.config-btn {
  width: 372rpx;
  height: 94rpx;
  line-height: 94rpx;
  background: #f6be2b;
  border-radius: 24px;
  color: #fff;
  font-size: 36rpx;
}

.config-btn::after {
  border: 0;
}

.modal-title {
  height: 142rpx;
}

.price-title-img {
  width: 652rpx;
  height: 142rpx;
}

.modal-content {
  width: 652rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.price-item {
  width: 600rpx;
  height: 130rpx;
  background: url('data:image/png;base64,');
  background-size: 100% 100%;
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.price-left {
  width: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.price-title {
  width: 330rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
}

.title-top {
  font-size: 12pt;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  color: #6c3e3e;
  font-weight: 600;
}

.title-bottom {
  width: 100%;
  color: #aaa;
  font-size: 8pt;
  margin-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.item-price {
  width: 170rpx;
  display: flex;
  margin-right: 12rpx;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}

.price-top {
  font-size: 14pt;
  height: 50rpx;
  line-height: 50rpx;
  color: #ff3131;
  font-weight: 600;
}

.price-bottom {
  height: 40rpx;
  line-height: 40rpx;
  color: #aaa;
  font-size: 8pt;
}

.price-right {
  width: 95rpx;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.vip-option-img {
  width: 50rpx;
  height: 50rpx;
}

.close-image {
  width: 60rpx;
  height: 60rpx;
}
